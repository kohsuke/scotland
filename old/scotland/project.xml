    <mailingList>
      <name>Issues List</name>
      <subscribe>issues-subscribe@${maven.javanet.project}.dev.java.net</subscribe>
      <unsubscribe>issues-unsubscribe@${maven.javanet.project}.dev.java.net</unsubscribe>
